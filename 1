#include <stdio.h>
#include <stdlib.h>

// Structure for a Day
struct Day {
    char *name;
    int date;
    char *activity;
};

// Function to create one day
struct Day create() {
    struct Day d;

    d.name = (char *)malloc(30 * sizeof(char));
    d.activity = (char *)malloc(100 * sizeof(char));

    printf("Enter Day Name: ");
    scanf("%s", d.name);

    printf("Enter Date: ");
    scanf("%d", &d.date);

    printf("Enter Activity: ");
    scanf(" %[^\n]", d.activity);   // reads full sentence

    return d;
}

// Function to read calendar
void readCalendar(struct Day cal[], int n) {
    for (int i = 0; i < n; i++) {
        printf("\nDay %d details:\n", i + 1);
        cal[i] = create();
    }
}

// Function to display calendar
void displayCalendar(struct Day cal[], int n) {
    printf("\nðŸ“… WEEKLY ACTIVITY REPORT\n");
    for (int i = 0; i < n; i++) {
        printf("\nDay: %s", cal[i].name);
        printf("\nDate: %d", cal[i].date);
        printf("\nActivity: %s\n", cal[i].activity);
    }
}

int main() {
    int n = 7;
    struct Day calendar[7];

    readCalendar(calendar, n);
    displayCalendar(calendar, n);

    // Free memory
    for (int i = 0; i < n; i++) {
        free(calendar[i].name);
        free(calendar[i].activity);
    }

    return 0;
}
