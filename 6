#include <stdio.h>
#include <stdlib.h>

#define MAX 4

int front = 0, rear = -1, count = 0;
char q[MAX], item;

/* Insert operation */
void insert(char item)
{
    if (count == MAX)
    {
        printf("\nQueue is Full\n");
        return;
    }
    rear = (rear + 1) % MAX;
    q[rear] = item;
    count++;
}

/* Delete operation */
void del()
{
    if (count == 0)
    {
        printf("\nQueue is Empty\n");
        return;
    }
    item = q[front];
    printf("\nDeleted item is: %c\n", item);
    front = (front + 1) % MAX;
    count--;
}

/* Display operation */
void display()
{
    int i, f;
    if (count == 0)
    {
        printf("\nQueue is Empty\n");
        return;
    }
    printf("\nContents of Queue are:\n");
    f = front;
    for (i = 0; i < count; i++)
    {
        printf("%c ", q[f]);
        f = (f + 1) % MAX;
    }
    printf("\n");
}

int main()
{
    int ch;
    do
    {
        printf("\n1. Insert\n2. Delete\n3. Display\n4. Exit");
        printf("\nEnter the choice: ");
        scanf("%d", &ch);

        switch (ch)
        {
        case 1:
            printf("Enter the character to be inserted: ");
            scanf(" %c", &item);
            insert(item);
            break;

        case 2:
            del();
            break;

        case 3:
            display();
            break;

        case 4:
            exit(0);
        }
    } while (ch != 4);

    return 0;
}
